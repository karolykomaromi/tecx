<configuration>
    <system.web>
        <compilation debug="true" targetFramework="4.0" />
    </system.web>

    <system.serviceModel>
        <behaviors>
            <serviceBehaviors>
                <behavior name="">
                    <!--<serviceMetadata httpGetEnabled="true" />-->
                    <serviceDebug includeExceptionDetailInFaults="true" />
                </behavior>
            </serviceBehaviors>
        </behaviors>
        <bindings>
            <customBinding>
                <binding name="BinaryViaHttp">
                    <binaryMessageEncoding />
                    <httpTransport />
                </binding>
            </customBinding>
        </bindings>
        <serviceHostingEnvironment aspNetCompatibilityEnabled="true"
            multipleSiteBindingsEnabled="true" />
        <services>
            <service name="TecX.Agile.Planner.Silverlight.Web.Service.SilverlightPlanningService">
                <endpoint address="" binding="customBinding" bindingConfiguration="BinaryViaHttp"
                    contract="TecX.Agile.Planner.Silverlight.Web.Service.ISilverlightPlanningService" />
                <!--<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />-->
            </service>
        </services>
    </system.serviceModel>
</configuration>
