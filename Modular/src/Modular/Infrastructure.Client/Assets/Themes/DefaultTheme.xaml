<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Styles.xaml"/>
        <ResourceDictionary Source="Templates.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <SolidColorBrush Color="Black" x:Key="MenuText"/>

    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" x:Key="MenuBackground">
        <GradientStop Offset="0.0" Color="{StaticResource GreenDark}"/>
        <GradientStop Offset="1.0" Color="{StaticResource GreenLight}"/>
    </LinearGradientBrush>
    
    <SolidColorBrush Color="White" x:Key="ContentBackground"/>
    
    <Style TargetType="Border" x:Key="TitleBorder">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Background" Value="{StaticResource MenuBackground}" />
    </Style>
    
    <Style TargetType="TextBlock" x:Key="TitleText">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>
</ResourceDictionary>
